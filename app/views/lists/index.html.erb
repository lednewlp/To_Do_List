<section class= 'hero'>
  <div class='hero-body'>
    <div class='container'>
      <table class='table is-bordered, is-hoverable, is-fullwidth'>


        <tbody>
          <% @lists.each do |list| %>


            <% if list.completed %>
              <tr class= 'table is-striped,'>
                <td class='striker'><%= link_to list.description, edit_list_path(list) %></td>
                <td>
                  <center>
                    <%= form_for(list) do |f| %>
                    <%= f.text_field :description, type: 'hidden' %>
                    <%= f.check_box :completed, :checked => false, :style => 'visibility: hidden' %>
                    <%= f.submit "Uncross", class: 'is-danger is-outlined is-large' %>
                    <% end %>
                  </center>
                </td>
                <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% else %>
              <tr>
                <td><%= link_to list.description, edit_list_path(list) %></td>
                <td>
                  <center>
                    <%= form_for(list) do |f| %>
                    <%= f.text_field :description, type: 'hidden' %>
                    <%= f.check_box :completed, :checked => true, :style => 'visibility: hidden' %>
                    <%= f.submit "Cross", class: 'is-outlined is-large' %>
                    <% end %>
                  </center>
                </td>
                <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <br>

<%= link_to 'New List', new_list_path %>
    </div>
  </div>
</section>
